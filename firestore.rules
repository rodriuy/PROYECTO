rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Families can be read by any authenticated user to check for existence,
    // but only created by the owner.
    match /families/{familyId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == familyId;
      allow update, delete: if request.auth.uid == familyId;

      // Stories can only be accessed by members of the family.
      // The `familyId` in the path must match the authenticated user's UID.
      match /stories/{storyId} {
        allow read, write: if request.auth.uid == familyId;
      }
    }
  }
}
